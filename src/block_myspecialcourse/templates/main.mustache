<section
	class="block block_recentlyaccesseditems card mb-3"
	data-template="block_myspecialcourse/main"
	id="myspecialcourse-block-{{uniqid}}"
>
	<div class="card-body p-3">
		<h5 class="card-title d-inline">
			{{title}}
		</h5>
		<div class="card-text content mt-3">
			<div
				class="block-recentlyaccesseditems block-cards"
        data-region="myspecialcourse"
			>
				<div class="container-fluid p-0">
					<div data-region="myspecialcourse-view">
						<div data-region="myspecialcourse-view-content">
							<div class="card-deck dashboard-card-deck" role="list">
								{{#items}}
									{{> block_myspecialcourse/item}}
								{{/items}}
								{{#showCourseLink}}
									<a 
										class="card dashboard-card mb-2 py-2"
										href="/course/view.php?id={{{courseId}}}"
									>
										<div class="card-body course-info-container">
											<div class="d-flex h-100 align-items-center">
												<div class="w-100 line-height-3 ml-2">
													<h6 class="mb-0">View All</h6>
												</div>
											</div>
										</div>
									</a>
								{{/showCourseLink}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
